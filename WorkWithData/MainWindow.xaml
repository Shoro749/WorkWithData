<Window x:Class="WorkWithData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkWithData"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="Open..." Click="OpenFile_Click"/>
                <MenuItem Header="Save as">
                    <MenuItem Header="To CSV" Click="ExportCsv_Click"/>
                    <MenuItem Header="To JSON" Click="ExportJson_Click"/>
                    <MenuItem Header="To XML" Click="ExportXml_Click"/>
                    <MenuItem Header="To XLSX" Click="ExportXlsx_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Exit" />
            </MenuItem>

            <MenuItem Header="_Report">
                <MenuItem Header="Generate DOCX report"/>
                <MenuItem Header="Generate XLSX report"/>
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="1">
            <TabItem Header="Main">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.16*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    <!-- Filters -->
                    <GroupBox x:Name="Filters" Grid.RowSpan="4" BorderBrush="#FFB7BDC1">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Top" >
                            <TextBlock Text="Price range:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBox x:Name="tb_min" Width="70" Margin="0,0,10,0"/>
                                <TextBox x:Name="tb_max" Width="70"/>
                            </StackPanel>

                            <TextBlock Text="Date range:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <DatePicker x:Name="dp_start" Width="100" Margin="0,0,10,0"/>
                                <DatePicker x:Name="dp_end" Width="100"/>
                            </StackPanel>

                            <Button x:Name="ApplyFilterButton" Content="Apply Filters" Margin="0,15,0,0" 
                                Padding="5,3" Click="ApplyFilter_Click"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Search -->
                    <TextBox x:Name="tb_search" Grid.Column="1" Grid.ColumnSpan="3" Margin="35 35 150 35"/>
                    <Button Content="Search" Grid.Column="3" Margin="60 35 35 35" Click="Search_Click"/>

                    <!--Data grid-->
                    <DataGrid x:Name="dg_transactions" Margin="10 10 10 10" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3" CanUserSortColumns="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="Grafics">
                
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
